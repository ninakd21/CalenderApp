<!-- views/partials/whiteboard.ejs -->
<!-- Whiteboard Toggle Button -->
<button onclick="toggleWhiteboard()" class="btn btn-warning mt-4">
    Open Whiteboard
  </button>
  
  <!-- Whiteboard Canvas Popup -->
  <div id="whiteboard" class="whiteboard-container">
    <button onclick="toggleWhiteboard()" class="btn btn-danger mb-2">Close</button>
    <button onclick="setTool('pen')" class="btn btn-secondary">Pen</button>
    <button onclick="setTool('eraser')" class="btn btn-secondary">Eraser</button>
    <button onclick="clearCanvas()" class="btn btn-danger">Clear</button>
    <canvas id="canvas" width="800" height="500" class="border mt-3"></canvas>
  </div>
  