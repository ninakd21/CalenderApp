<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
  <!-- Bootstrap Icons -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>

  <style>
    body {
      background-color: #121212;
      color: white;
      font-family: 'Arial', sans-serif;
      text-align: center;
      padding: 20px;
    }
    .dashboard {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    .card {
      background-color: #1E1E1E;
      border-radius: 12px;
      padding: 25px;
      box-shadow: 0px 4px 6px rgba(0,0,0,0.5);
      text-align: left; /* So text aligns properly in tasks & schedule */
    }
    .card h2 {
      font-size: 1.3rem;
      margin-bottom: 10px;
      color: #FFFFFF;
    }
    .card p,
    .card li {
      color: white;
    }
    /* Whiteboard container */
    .whiteboard-container {
      display: none;
      position: fixed;
      top: 50%; 
      left: 50%;
      transform: translate(-50%, -50%);
      background: #fff; 
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0px 4px 6px rgba(0,0,0,0.3);
      z-index: 1000;
    }
  </style>
</head>
<body>
  <!-- Time & Date (Mirror Layout) -->
  <h1 class="display-3">19:24</h1>
  <h5 class="text-light">Monday, March 3</h5>

  <!-- Filter Buttons -->
  <div class="my-3">
    <button class="btn btn-outline-light" onclick="filterContent('all')">All</button>
    <button class="btn btn-outline-light" onclick="filterContent('work')">Work</button>
    <button class="btn btn-outline-light" onclick="filterContent('personal')">Personal</button>
  </div>

  <!-- Dashboard Sections -->
  <div class="dashboard">
    <!-- Tasks Partial -->
    <%- include("partials/tasks", {
          tasks: tasks,
          workPlan: workPlan,
          personalPlan: personalPlan
        }) %>
      
    <!-- Schedule Partial -->
    <%- include("partials/schedule", {
          calendars: calendars,
          calendarEvents: calendarEvents
        }) %>
  </div>

  <!-- Whiteboard Partial -->
  <%- include("partials/whiteboard") %>

  <script>
    // Show/hide Whiteboard
    function toggleWhiteboard() {
      const whiteboard = document.getElementById('whiteboard');
      whiteboard.style.display = (whiteboard.style.display === 'none' || !whiteboard.style.display) 
        ? 'block' : 'none';
    }

    // Filter tasks & schedule
    function filterContent(type) {
      // Hide or show tasks
      document.querySelectorAll('.task-section').forEach(task => {
        if (type === 'all' || task.dataset.taskType === type) {
          task.style.display = 'list-item';
        } else {
          task.style.display = 'none';
        }
      });

      // Hide or show calendar events
      document.querySelectorAll('.calendar-section').forEach(calSection => {
        if (type === 'all' || calSection.dataset.calendarType === type) {
          calSection.style.display = 'block';
        } else {
          calSection.style.display = 'none';
        }
      });
    }
  </script>
  <script>
    // Already have filterContent(type) for 'work'/'personal'.
    // Now we add filterBucket(bucketName).
    function filterBucket(bucketName) {
      document.querySelectorAll(".task-section").forEach(task => {
        if (bucketName === "all" || task.dataset.bucket === bucketName) {
          task.style.display = "list-item";
        } else {
          task.style.display = "none";
        }
      });
    }
  </script>
  

  <!-- Whiteboard logic in its own JS file (if you want) -->
  <script src="/js/whiteboard.js"></script>
  <!-- Additional scripts (tasks.js, schedule.js) if needed -->
  <script src="/js/tasks.js"></script>
  <script src="/js/schedule.js"></script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
